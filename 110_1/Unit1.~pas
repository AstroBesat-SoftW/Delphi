{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  kapat:integer;
begin
  kapat:=application.MessageBox('eminmisiniz','Kapat',mb_yesno);
  if kapat=idyes then //yese basarsak
    application.Terminate;
    else
    showmessage('kapatma iþlemi iptal edildi');

end;

